<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Express â€¢ ouilleMessageMVC</title>
		<link rel="stylesheet" href="/css/base.css">
		<link rel="stylesheet" href="/css/index.css">
		<link rel="stylesheet" href="/css/login.css">
	</head>
	<body>
		<section class="prompt">
			<h3>ouilleMessage</h3>
			<h1>Register</h1>
			<section class="localLogin">
				<form action="/auth/local/register" method="post">
					<label for="name">Name:</label>
					<input type="text" id="name" name="name" required>

					<label for="username">Username:</label>
					<input type="text" id="username" name="username" required>

					<label for="password">Password:</label>
					<input type="password" id="password" name="password" required>

					<label for="email">Email:</label>
					<input type="email" id="email" name="email" required>

					<button type="submit">Register</button>
					<a class="button register" href="/login">Already registered ? Login</a>
				</form>
			</section>
			<% if (hasMessages) { %>
			<section class="messages">
				<% messages.forEach(function(message) { %>
				<p><%= message %></p>
				<% }); %>
			</section>
			<% } %>
			<a class="button google" href="/auth/federated/google">Register with Google</a>
		</section>
		<footer class="info">
			<p>Authentication powered by <a href="https://www.passportjs.org">Passport</a></p>
		</footer>
	</body>
</html>
